{% extends 'base.html.twig' %}

{% block page_title %}Location{% endblock %}
{% block page_subtitle %}configuration{% endblock %}

{% block topRight %}
    <a href="{{ path('location_index') }}" class="btn btn-default"><i class="fas fa-list"></i></a>
    <a href="{{ path('location_edit', {'id': location.id}) }}" class="btn btn-default"><i class="fas fa-edit"></i></a>
    {{ include('location/_delete_form.html.twig') }}
{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ location.name }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
