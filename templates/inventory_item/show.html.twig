{% extends 'base.html.twig' %}

{% block page_title %}Inventory Item{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block topRight %}
    <a href="{{ path('inventory_item_index') }}" class="btn btn-default"><i class="fas fa-list"></i></a>
    <a href="{{ path('inventory_item_edit', {'id': inventory_item.id}) }}" class="btn btn-default"><i class="fas fa-edit"></i></a>
    {{ include('inventory_item/_delete_form.html.twig') }}
{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Description</th>
                <td>{{ inventory_item.description }}</td>
            </tr>
            <tr>
                <th>Count</th>
                <td>{{ inventory_item.count }}</td>
            </tr>
            <tr>
                <th>Extra information</th>
                <td>{{ inventory_item.inventoryItemFieldValues|join(', ') }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
