{% extends 'base.html.twig' %}

{% block page_title %}Inventory{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block topRight %}
    <a href="{{ path('inventory_item_new') }}" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Add item to inventory</a>
{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Description</th>
                <th>Count</th>
                <th>Extra information</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inventory_item in inventory_items %}
            <tr>
                <td>{{ inventory_item.ingredientType }}</td>
                <td>{{ inventory_item.description }}</td>
                <td>{{ inventory_item.count }}</td>
                <td>{{ inventory_item.inventoryItemFieldValues|join(', ') }}</td>
                <td>
                    <a href="{{ path('inventory_item_show', {'id': inventory_item.id}) }}" class="btn btn-default"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('inventory_item_edit', {'id': inventory_item.id}) }}" class="btn btn-default"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
