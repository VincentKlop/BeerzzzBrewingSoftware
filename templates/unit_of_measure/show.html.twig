{% extends 'base.html.twig' %}

{% block page_title %}Unit Of Measurement{% endblock %}
{% block page_subtitle %}configuration{% endblock %}

{% block topRight %}
    <a href="{{ path('unit_of_measure_index') }}" class="btn btn-default"><i class="fas fa-list"></i></a>
    <a href="{{ path('unit_of_measure_edit', {'id': unit_of_measure.id}) }}" class="btn btn-default"><i class="fas fa-edit"></i></a>
    {{ include('unit_of_measure/_delete_form.html.twig') }}
{% endblock %}

{% block body %}
<table class="table">
    <tbody>
        <tr>
            <th>Name</th>
            <td>{{ unit_of_measure.name }}</td>
        </tr>
        <tr>
            <th>Factor</th>
            <td>{{ unit_of_measure.factor }}</td>
        </tr>
    </tbody>
</table>
{% endblock %}
