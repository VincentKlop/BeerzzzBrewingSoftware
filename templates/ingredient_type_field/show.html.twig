{% extends 'base.html.twig' %}

{% block page_title %}Ingredient Type Field{% endblock %}
{% block page_subtitle %}configuration{% endblock %}

{% block topRight %}
    <a href="{{ path('ingredient_type_field_index') }}" class="btn btn-default"><i class="fas fa-list"></i></a>
    <a href="{{ path('ingredient_type_field_edit', {'id': ingredient_type_field.id}) }}" class="btn btn-default"><i class="fas fa-edit"></i></a>
    {{ include('ingredient_type_field/_delete_form.html.twig') }}
{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Ingredient Types</th>
                <td>{{ ingredient_type_field.ingredientType|join(', ') }}</td>
            </tr>
            <tr>
                <th>Unit of Measurement</th>
                <td>{{ ingredient_type_field.unitOfMeasure }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
